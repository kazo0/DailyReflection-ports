<?xml version="1.0" encoding="utf-8" ?>
<!--
    MainPage - Navigation Shell
    Migrated from MAUI Shell + TabBar to Uno Platform TabBar (Uno.Toolkit)
    Based on Uno Platform Docs: NavigationShell.md, NavigateTabBar.md

    Original MAUI Shell structure:
    <Shell>
        <TabBar>
            <Tab Title="Reflection" ...>
            <Tab Title="Sober Time" ...>
            <Tab Title="Settings" ...>
        </TabBar>
    </Shell>-->
<Page x:Class="DailyReflection.Views.MainPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:utu="using:Uno.Toolkit.UI"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid RowDefinitions="*,Auto">
		<!-- Content Area - displays the selected page -->
		<Frame x:Name="ContentFrame"
			   Grid.Row="0" />

		<!-- Bottom TabBar - replaces MAUI Shell TabBar -->
		<utu:TabBar x:Name="NavigationTabBar"
					Grid.Row="1"
					SelectionChanged="NavigationTabBar_SelectionChanged">
			<utu:TabBarItem Content="Reflection">
				<utu:TabBarItem.Icon>
					<FontIcon FontFamily="{StaticResource FontAwesomeSolid}"
							  Glyph="&#xf02d;" />
				</utu:TabBarItem.Icon>
			</utu:TabBarItem>
			<utu:TabBarItem Content="Sober Time">
				<utu:TabBarItem.Icon>
					<FontIcon FontFamily="{StaticResource FontAwesomeRegular}"
							  Glyph="&#xf017;" />
				</utu:TabBarItem.Icon>
			</utu:TabBarItem>
			<utu:TabBarItem Content="Settings">
				<utu:TabBarItem.Icon>
					<FontIcon FontFamily="{StaticResource FontAwesomeSolid}"
							  Glyph="&#xf013;" />
				</utu:TabBarItem.Icon>
			</utu:TabBarItem>
		</utu:TabBar>
	</Grid>
</Page>
