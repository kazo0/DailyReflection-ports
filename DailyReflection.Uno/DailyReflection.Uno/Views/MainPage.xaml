<?xml version="1.0" encoding="utf-8" ?>
<!--
    MainPage - Navigation Shell
    Migrated from MAUI Shell + TabBar to Uno Platform TabBar with Region-based Navigation (Uno.Extensions.Navigation)
    Based on Uno Platform Docs: NavigationShell.md, NavigateTabBar.md, HowTo-UseTabBar.md, DefineRegions.md

    Original MAUI Shell structure:
    <Shell>
        <TabBar>
            <Tab Title="Reflection" ...>
            <Tab Title="Sober Time" ...>
            <Tab Title="Settings" ...>
        </TabBar>
    </Shell>
    
    Uno Navigation Extensions pattern:
    - Parent Grid with uen:Region.Attached="True"
    - Content Grid with uen:Region.Attached="True" and uen:Region.Navigator="Visibility"
    - TabBar with uen:Region.Attached="True"
    - TabBarItems with uen:Region.Name matching routes defined in App.xaml.cs
-->
<Page x:Class="DailyReflection.Views.MainPage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:uen="using:Uno.Extensions.Navigation.UI"
	  xmlns:utu="using:Uno.Toolkit.UI"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<!-- Parent Grid with Region attached for navigation hierarchy -->
    <Grid uen:Region.Attached="True" utu:SafeArea.Insets="VisibleBounds">
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		
		<!-- Content Area - Region-based navigation displays the selected page here -->
		<!-- The navigator uses Visibility to switch between routes/pages -->
		<Grid x:Name="ContentArea"
			  Grid.Row="0"
			  uen:Region.Attached="True"
			  uen:Region.Navigator="Visibility" />

		<!-- Bottom TabBar - uses Region.Name to associate with routes defined in App.xaml.cs -->
		<utu:TabBar x:Name="NavigationTabBar"
					Grid.Row="1"
					uen:Region.Attached="True">
			<utu:TabBarItem Content="Reflection"
							uen:Region.Name="Reflection">
				<utu:TabBarItem.Icon>
					<FontIcon FontFamily="{StaticResource FontAwesomeSolid}"
							  Glyph="&#xf02d;" />
				</utu:TabBarItem.Icon>
			</utu:TabBarItem>
			<utu:TabBarItem Content="Sober Time"
							uen:Region.Name="SoberTime">
				<utu:TabBarItem.Icon>
					<FontIcon FontFamily="{StaticResource FontAwesomeRegular}"
							  Glyph="&#xf017;" />
				</utu:TabBarItem.Icon>
			</utu:TabBarItem>
			<utu:TabBarItem Content="Settings"
							uen:Region.Name="Settings">
				<utu:TabBarItem.Icon>
					<FontIcon FontFamily="{StaticResource FontAwesomeSolid}"
							  Glyph="&#xf013;" />
				</utu:TabBarItem.Icon>
			</utu:TabBarItem>
		</utu:TabBar>
	</Grid>
</Page>
